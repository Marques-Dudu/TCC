<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!--Definindo que o app precisa da localizacao exata do usuario-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!--Localizacao aproximada-->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!--Permissao necessaria para utilizar mapas da internet-->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeWayApp"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"> <!--Configuracao para-->

        <!--Configuracoes de cache do mapa-->
        <meta-data android:name="osmdroid.basePath" android:value="osmdroid" />
        <meta-data android:name="osmdroid.cachePath" android:value="osmdroid/cache"/>


        <activity
            android:name=".TelaChat"
            android:exported="false" />
        <activity
            android:name=".TelaIndexActivity"
            android:exported="false"
            android:label="@string/title_activity_tela_index"
            android:theme="@style/Theme.SafeWayApp.NoActionBar" />
        <activity
            android:name=".TermosDeUso"
            android:exported="false" />
        <activity
            android:name=".PoliticaDePrivacidade"
            android:exported="false" />

        <activity
            android:name=".TelaCadastro"
            android:exported="false" />
        <activity
            android:name=".TelaLogin"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>
</manifest>